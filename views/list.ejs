<!DOCTYPE html>
<html lang="en">
    <%- include("header") -%>
    <body>
        <div class="box" id="heading">
            <h1><%=  listTitle %></h1>
        </div>

        <div class="box">
            <% newListItems.forEach((e) => { %>
                <form action="/delete" method="POST">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%= e._id %>" onChange="this.form.submit()">
                        <p><%= e.name %></p>
                    </div>
                    <input type="hidden" name="listName" value="<%= listTitle %>">
                </form>
            <% }) %>
            <form action="/" action="" method="POST" class="item">
                <input type="text" name="newItem" value="" autocomplete="off" placeholder="New todo">
                <button type="submit" name="list" value=<%= listTitle %>>+</button>
            </form>
        </div>

        <%- include("footer") -%>
    </body>
</html>