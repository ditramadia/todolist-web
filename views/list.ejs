<!DOCTYPE html>
<html lang="en">
    <%- include("header") -%>
    <body>
        <div class="box" id="heading">
            <h1><%=  listTitle %></h1>
        </div>

        <div class="box">
            <% for (let i = 0; i < newListItems.length; i++) { %>
                <div class="item">
                    <input type="checkbox">
                    <p><%= newListItems[i] %></p>
                </div>
            <% } %>
            <form action="" action="" method="POST">
                <input type="text" name="newItem" value="" autocomplete="off" placeholder="New todo">
                <button type="submit" name="list" value=<%= listTitle %>>+</button>
            </form>
        </div>

        <%- include("footer") -%>
    </body>
</html>